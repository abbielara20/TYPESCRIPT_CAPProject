{
  "name": "inventoryApp",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@cap-js/hana": "^1",
    "@sap/cds": "^8",
    "@sap/eslint-plugin-cds": "^3.2.0",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/cds-typer": ">=0.1",
    "@cap-js/cds-types": "^0.9.0",
    "@cap-js/sqlite": "^1",
    "@eslint/js": "^9.26.0",
    "@sap/cds-dk": "^8",
    "@types/node": "^22.0.0",
    "eslint": "^9.26.0",
    "eslint-plugin-security": "^3.0.1",
    "globals": "^16.1.0",
    "mbt": "^1.2.29",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.3.2",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.0"
  },
  "scripts": {
    "start": "cds-serve",
    "watch": "cds-tsx w",
    "lint": "npx eslint .",
    "before:cds-watch": "cds-typer \"*\"",
    "watch-inventory": "cds watch --open inventory/webapp/index.html?sap-ui-xx-viewCache=false",
    "undeploy": "cf undeploy inventoryApp --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
  },
  "cds": {
    "sql": {
      "native_hana_associations": false
    },
    "requires": {
      "db": {
        "kind": "hana-cloud"
      }
    }
  },
  "imports": {
    "#cds-models/*": "./@cds-models/*/index.js"
  },
  "sapux": [
    "app/inventory"
  ]
}
